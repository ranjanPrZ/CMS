<div class="Relative bg-gray-900 sm:py-24 lg:py-32 rounded-md">
  <div class="mx-auto max-w-5xl lg:px-8 md:py-30  inline-flex">
    <div class="w-1/2 px-10">
      <p class="text-3xl font-bold tracking-tight text-white"><strong> Welcome to CMS </strong></p>
      <p class="text-lg leading-8 text-gray-300 py-3"><i>Let's contribute and grow together. Thanks!!!</i></p>
    </div>
    <div class="w-1/2 max-w-3xl mx-10">
      <p style="color: #ba8c63; font-style: italic;" class="mb-5"><strong>Select Subject type</strong></p>
      <%= form_tag(root_path, method: 'get', id: 'url-form', class:"text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2") do %>
        <%= select_tag 'url', options_for_select(@urls.map { |u| [u[:name], u[:url]] }), onchange: 'submitForm(this)', style: "color: black; border: 1px solid #87a0d1;" %>
      <% end %>

      <div class="absolute left-1/2 top-0 -z-10 -translate-x-1/2 blur-3xl xl:-top-6" aria-hidden="true">
        <div class="aspect-[1155/678] w-[72.1875rem] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
      </div>
    </div>
  </div>
</div>


<script>
function submitForm(select) {
  var selectedUrl = select.options[select.selectedIndex].value;
  window.location.href = selectedUrl;
}
</script>